        "margin": "0,0",
        "content": [
          {
            "type": "itemgrid",
            "item_margin": "6,1",
            "h_alignment": "left",
            "rows": [
              [ "ridley",   "charge", "varia",   "morph",  "hijump" ],
              [ "phantoon", "ice",    "gravity", "bomb",   "space" ],
